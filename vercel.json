{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/public/index.html"
    },
    {
      "src": "/pix-payment.html",
      "dest": "/public/pix-payment.html"
    },
    {
      "src": "/pix-payment-success.html",
      "dest": "/public/pix-payment-success.html"
    },
    {
      "src": "/style.css",
      "dest": "/public/style.css"
    },
    {
      "src": "/script.js",
      "dest": "/script.js"
    },
    {
      "src": "/webhook",
      "dest": "server.js"
    },
    {
      "src": "/criar-pagamento",
      "dest": "server.js"
    },
    {
      "src": "/check-payment-status/(.*)",
      "dest": "server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ]
}